@model IEnumerable<IzimpisiApplicationsOffice.Models.Applications.Courses>

@{
    ViewBag.Title = "Courses";
    int? applicationId = ViewBag.ApplicationId;
}

<h2>List Of Courses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Years)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinimumAPS)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Years)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinimumAPS)
        </td>
        @if (User.Identity.Name == "admin@gmail.com")
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }) 
                @Html.ActionLink("Details", "Details", new { id = item.CourseId })
                @Html.ActionLink("Delete", "Delete", new { id = item.CourseId })
            </td>
        }
        else
        {
            <td>
                @Html.ActionLink("Add", "AddCourse", "Applications", new { applicationId, item.CourseId }, null)
            </td>
        }

    </tr>
}

</table>
