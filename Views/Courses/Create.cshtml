@model IzimpisiApplicationsOffice.Models.Applications.Courses

@{
    ViewBag.Title = "Create";
}

<main class="d-flex flex-column align-items-center">

    <h2>Add Courses As Admin</h2>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "w-100" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Courses</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Years, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Years, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Years, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MinimumAPS, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MinimumAPS, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MinimumAPS, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-outline-primary my-1" />
                </div>
            </div>
        </div>
    }
    </main>
<div>
    @Html.ActionLink("Course List", "Index", "Courses")
</div>
