@model IzimpisiApplicationsOffice.Models.UserFields.SchoolBackground

@{
    ViewBag.Title = "Add School Background";
}

<main class="d-flex flex-column align-items-center">

    <h2>Add Schooling Background - Step 2</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "w-100" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <h4>SchoolBackground</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.SchoolName, htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SchoolName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SchoolName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.YearCompleted, htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.YearCompleted, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.YearCompleted, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Subjects" class="btn btn-outline-primary my-1" />
        </div>
    </div>
    @Html.ActionLink("List", "Index", "SchoolRecords")
    <div>
        @Html.ActionLink("Continue to Applications", "Index", "Applications")
    </div>
</div>
    }
</main>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
