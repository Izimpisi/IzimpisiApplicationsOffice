@model IzimpisiApplicationsOffice.Models.UserFields.SchoolRecords

@{
    ViewBag.Title = "Add Subjects";
}


<main class="d-flex flex-column align-items-center">
    <h2>Add Subjects From Matric - Final Step 3</h2>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "w-100" })) 
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <h4>SchoolRecords</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.SubjectName, "Name of Subject", htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Score, "Final Matric Mark", htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Score, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Score, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-outline-primary my-1" />
        </div>
        
    <div>
        <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-outline-success bg-light"> @Html.ActionLink("Continue to Applications", "Index", "Applications")</button>
            <button type="button" class="btn btn-outline-primary bg-light">@Html.ActionLink("View Subjects", "Index", "SchoolRecords")</button>
        </div>
       
    </div>
    </div>
</div>
    }
    </main>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
