@model IzimpisiApplicationsOffice.Models.Applications.Application

@{
    ViewBag.Title = "Add New Application";
}

<main class="d-flex flex-column align-items-center application-create">

    <h2>Add Application</h2>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "w-100" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Application</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Program, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.Program, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Program, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PersonalStatement, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.PersonalStatement, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PersonalStatement, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    </main>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
